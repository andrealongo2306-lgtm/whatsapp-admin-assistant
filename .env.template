# Template per variabili d'ambiente
# Copia questo file in .env e compila con i tuoi valori reali

# Twilio Configuration
TWILIO_ACCOUNT_SID=your_account_sid_here
TWILIO_AUTH_TOKEN=your_auth_token_here
TWILIO_WHATSAPP_NUMBER=whatsapp:+14155238886

# URL pubblico per webhook (ngrok o dominio produzione)
TWILIO_WEBHOOK_URL=https://your-ngrok-url.ngrok.io/api/whatsapp/webhook

# MongoDB Configuration
MONGODB_URI=mongodb://localhost:27017/whatsapp_assistant
# Per MongoDB Atlas:
# MONGODB_URI=mongodb+srv://username:password@cluster.mongodb.net/whatsapp_assistant

# Gmail Configuration
GMAIL_USER_EMAIL=your-email@gmail.com
GMAIL_CREDENTIALS_FILE=classpath:credentials.json
GMAIL_TOKENS_DIR=tokens

# Application Configuration
ADMIN_PHONE=+39123456789

# Server Configuration
SERVER_PORT=8080
